  <script src="/js/vue.min.js"></script>
  <script src="/js/axios.min.js"></script>
</head>
<body>
    <div id="login">
      <p>用户名：<input type="text" v-model="params.username"></p>
      <p>密码：<input type="password" v-model="params.password"></p>
      <button type="button" @click="login">登陆</button>
    </div>

<script>
  new Vue({
    el: "#login",
    data: {
      params: {
        username: '',
        password: ''
      }
    },
    methods: {
      login(){
        axios.post('/doLogin',this.params).then(res => {
          res = res.data
          alert(res.msg)
          console.log(res)
        })
      }
    }
  })
</script>
</body>
</html>